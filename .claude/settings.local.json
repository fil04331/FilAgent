{
  "permissions": {
    "allow": [
      "Bash(./scripts/manage_prs.sh:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr close:*)",
      "Bash(gh pr reopen:*)",
      "Bash(cut:*)",
      "Bash(xargs -I {} sh -c 'echo \"\"\"\"=== {} ===\"\"\"\" && grep -E \"\"\"\"^name:|^on:\"\"\"\" {}')",
      "Bash(pdm export:*)",
      "Bash(pdm run mypy:*)",
      "Bash(git fetch:*)",
      "Bash(pdm run pytest:*)"
    ],
    "deny": [],
    "ask": []
  },
  "outputStyle": "default",
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": false
  }
}
