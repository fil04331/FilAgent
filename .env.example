# FilAgent Environment Variables Example
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Backend selection: "llama.cpp" or "perplexity"
LLM_BACKEND=llama.cpp

# For llama.cpp (local model)
MODEL_PATH=models/weights/base.gguf
CONTEXT_SIZE=4096
N_GPU_LAYERS=35

# For Perplexity API
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-api-key-here
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online

# Available Perplexity models:
# - llama-3.1-sonar-small-128k-online   (Fast, cost-effective)
# - llama-3.1-sonar-large-128k-online   (Balanced performance)
# - llama-3.1-sonar-huge-128k-online    (Best quality)
# - llama-3.1-8b-instruct               (No search)
# - llama-3.1-70b-instruct              (No search, high quality)

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=data/filagent.db

# =============================================================================
# Security
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=INFO
ENABLE_PROMETHEUS=true

# =============================================================================
# Compliance
# =============================================================================
ENABLE_AUDIT_TRAIL=true
ENABLE_PII_REDACTION=true
ENABLE_WORM_LOGGING=true
