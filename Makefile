.PHONY: help install-test-deps test test-e2e test-compliance test-resilience test-quick test-coverage clean

# Couleurs pour l'affichage
BLUE := \033[0;34m
GREEN := \033[0;32m
YELLOW := \033[1;33m
RED := \033[0;31m
NC := \033[0m # No Color

help: ## Afficher l'aide
	@echo "$(BLUE)================================================$(NC)"
	@echo "$(BLUE)           FilAgent - Commandes Make$(NC)"
	@echo "$(BLUE)================================================$(NC)"
	@echo ""
	@echo "Commandes disponibles:"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  $(GREEN)%-20s$(NC) %s\n", $$1, $$2}'
	@echo ""
	@echo "Exemples:"
	@echo "  make install-test-deps  # Installer les d√©pendances"
	@echo "  make test               # Ex√©cuter tous les tests"
	@echo "  make test-e2e           # Tests E2E seulement"
	@echo "  make test-coverage      # Tests avec couverture"
	@echo ""

install-test-deps: ## Installer les d√©pendances de test
	@echo "$(YELLOW)üì¶ Installation des d√©pendances de test...$(NC)"
	@./scripts/install_test_deps.sh

test: ## Ex√©cuter tous les tests (E2E + compliance + unit)
	@echo "$(BLUE)üß™ Ex√©cution de tous les tests...$(NC)"
	@./scripts/run_tests.sh all -v

test-e2e: ## Ex√©cuter les tests E2E seulement
	@echo "$(BLUE)üß™ Ex√©cution des tests E2E...$(NC)"
	@./scripts/run_tests.sh e2e -v

test-compliance: ## Ex√©cuter les tests de conformit√© seulement
	@echo "$(BLUE)üß™ Ex√©cution des tests de conformit√©...$(NC)"
	@./scripts/run_tests.sh compliance -v

test-resilience: ## Ex√©cuter les tests de r√©silience seulement
	@echo "$(BLUE)üß™ Ex√©cution des tests de r√©silience...$(NC)"
	@./scripts/run_tests.sh resilience -v

test-quick: ## Ex√©cuter les tests rapides (sans @slow)
	@echo "$(BLUE)üß™ Ex√©cution des tests rapides...$(NC)"
	@./scripts/run_tests.sh quick -v

test-coverage: ## Ex√©cuter les tests avec rapport de couverture
	@echo "$(BLUE)üìä Ex√©cution des tests avec couverture...$(NC)"
	@./scripts/run_tests.sh coverage -v

test-verbose: ## Ex√©cuter tous les tests en mode tr√®s verbose
	@echo "$(BLUE)üß™ Ex√©cution des tests (verbose)...$(NC)"
	@./scripts/run_tests.sh all -vv

test-quiet: ## Ex√©cuter tous les tests en mode quiet
	@./scripts/run_tests.sh all -q

test-unit: ## Ex√©cuter les tests unitaires existants
	@echo "$(BLUE)üß™ Ex√©cution des tests unitaires...$(NC)"
	@pytest tests/test_tools.py tests/test_memory.py -v --tb=short

test-integration: ## Ex√©cuter les tests d'int√©gration
	@echo "$(BLUE)üß™ Ex√©cution des tests d'int√©gration...$(NC)"
	@pytest tests/test_server.py tests/test_agent_*.py -v --tb=short

test-parallel: ## Ex√©cuter les tests en parall√®le (n√©cessite pytest-xdist)
	@echo "$(BLUE)üß™ Ex√©cution des tests en parall√®le...$(NC)"
	@pytest tests/ -n auto -v

test-collect: ## Collecter les tests sans les ex√©cuter
	@echo "$(BLUE)üìã Collection des tests...$(NC)"
	@pytest tests/ --collect-only

clean: ## Nettoyer les fichiers de test temporaires
	@echo "$(YELLOW)üßπ Nettoyage...$(NC)"
	@find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	@find . -type d -name ".pytest_cache" -exec rm -rf {} + 2>/dev/null || true
	@find . -type f -name "*.pyc" -delete 2>/dev/null || true
	@rm -rf htmlcov/ .coverage 2>/dev/null || true
	@echo "$(GREEN)‚úÖ Nettoyage termin√©$(NC)"

lint: ## V√©rifier le code avec flake8
	@echo "$(BLUE)üîç V√©rification du code...$(NC)"
	@flake8 runtime/ tools/ memory/ tests/ --max-line-length=120 --exclude=__pycache__ || true

format: ## Formater le code avec black
	@echo "$(BLUE)‚ú® Formatage du code...$(NC)"
	@black runtime/ tools/ memory/ tests/ --line-length=100

type-check: ## V√©rifier les types avec mypy
	@echo "$(BLUE)üîç V√©rification des types...$(NC)"
	@mypy runtime/ tools/ memory/ --ignore-missing-imports || true

ci: install-test-deps test-coverage lint type-check ## Ex√©cuter toutes les v√©rifications CI
	@echo "$(GREEN)‚úÖ Toutes les v√©rifications CI sont pass√©es$(NC)"

pre-commit: test-quick lint ## V√©rifications rapides avant commit
	@echo "$(GREEN)‚úÖ Pr√™t pour commit$(NC)"

# Raccourcis
t: test ## Raccourci pour 'make test'
te: test-e2e ## Raccourci pour 'make test-e2e'
tc: test-compliance ## Raccourci pour 'make test-compliance'
tq: test-quick ## Raccourci pour 'make test-quick'
tcov: test-coverage ## Raccourci pour 'make test-coverage'
